<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.bmcsoft.fueltracker.view.Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/home_lout_1">


        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Start a trip"
            android:background="@color/material_deep_teal_200"
            />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Start a trip"
            android:background="@android:color/holo_blue_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/home_lout_2"
        android:layout_below="@+id/home_lout_1">

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Start a trip"
            android:background="@color/orange" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="Start a trip"
            android:background="@android:color/holo_green_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/home_lout_2">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle_list"
            >
        </Spinner>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD FILL UP"
            android:id="@+id/addFillUp"
            android:layout_below="@+id/vehicle_list"/>
    </LinearLayout>


</RelativeLayout>